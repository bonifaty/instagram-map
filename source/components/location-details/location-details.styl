@require '../../shared/helpers.styl'

.location-details
    position absolute
    top 0
    right 0
    height 100vh
    width 460px
    overflow auto
    background-color rgba(0,0,0,0.75)
    color white
    transform translate3d(100%, 0, 0)
    transition transform 0.3s
    padding 20px 40px

    &__title
        fontPTSans(28px, 400, 1.2)
        margin-bottom 20px
        padding-right 33px

    &__list
        display flex
        flex-wrap wrap
        justify-content space-between

    &__item
        flex-basis calc(50% - 5px)
        margin-bottom 10px

    &__item-image
        background-position 50%
        background-size cover
        &:after
            content ''
            display block
            padding-bottom 100%

    &__item-date
        display none

    &_visible
        transform translate3d(0, 0, 0)

    img
        width 100%

    &__close
        cursor pointer
        position absolute
        top 20px
        right 40px
        size(33px)
        text-align center
        font-family 'PT Sans', sans-serif
        fontPTSans(43px, 400, 33px)
        opacity 0.5
        transition opacity 0.3s

        &:hover
            opacity 0.8