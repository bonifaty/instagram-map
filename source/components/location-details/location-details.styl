@require '../../shared/helpers.styl'

.location-details
    position: absolute
    top: 0
    right: 0
    height: 100vh
    width: 300px
    overflow: auto
    background-color white
    transform translate3d(100%, 0, 0)
    transition transform 0.3s

    &_visible
        transform translate3d(0, 0, 0)

    img
        max-width 100%